{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <h1>Tous les utilisateurs</h1>

    <table id="table-users-index" class="table table-bordered table-hover table-responsive">
        <thead>
        <tr>
            <th>Utilisateur</th>
            <th>Role</th>
            <th>Date de création</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username}}</td>
                <td>{{ user.roles[0] }}</td>
                <td title="{{ user.createdAt|date('d.m.Y à H\\hi') }}">{{ user.createdAt|date('d.m.Y') }}</td>
                <td>
                    <a title="Éditer l'utilisateur {{ user.username }}" href="{{ path('users_edit', {'id' : user.id}) }}"><button class="btn btn-success">Éditer</button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('users_new') }}">
        <button class="btn btn-primary">Créer un utilisateur</button>
    </a>

{% endblock %}