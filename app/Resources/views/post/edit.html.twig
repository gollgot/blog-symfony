{% extends 'base.html.twig' %}

{% block title %}Édition : {{ post.title }}{% endblock %}

{% block body %}

    <section id="post-edit">
        <a href="{{ path('post_index') }}"><button class="btn btn-primary">Retour aux articles</button></a>
        <br>
        <br>

        <h1>Édition de l'article</h1>

        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-success btn-left">Éditer</button>
        {{ form_end(form) }}

        {{ form_start(delete_form) }}
            {% include 'modal/delete.html.twig' with {'message':'Voulez-vous vraiment supprimer cet article ?'}%}
            <button class="btn btn-danger btn-delete">Supprimer</button>
        {{ form_end(delete_form) }}
    </section>

{% endblock %}


{% block specificJS %}
    <script type="text/javascript">
        new nicEditor({
            iconsPath : '/js/lib/img/nicEditorIcons.gif',
            fullPanel : true,
            maxHeight : 300
        }).panelInstance('appbundle_post_content');
    </script>
{% endblock %}
