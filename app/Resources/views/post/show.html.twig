{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-8">
            <div class="left-container">

                <div class="post-show">
                    <h1>{{ post.title }}</h1>

                    <div class="post-meta">
                        <i>Posté le : {{ post.createdAt|date('d.m.Y à H\\hi') }}</i>
                        <br>
                        <i>Catégories :
                            {% if post.categories is not empty %}
                                {% for category in post.categories %}
                                    <u><a href="#"></s>{{ category.name }}</a></u>
                                {% endfor %}
                            {% else %}
                                Aucune
                            {% endif %}
                        </i>
                    </div>

                    <img src="{{ asset('uploads/posts_images/' ~ post.image) }}" alt="image">

                    <div>
                        {{ post.content }}
                    </div>

                    <h2>{{ post.comments|length }} {{ post.comments|length > 1 ? "commentaires" : "commentaire" }}</h2>

                    <div id="comments">
                        {% for comment in post.comments %}
                            <div class="comment">
                                <b>{{ comment.author }}</b><i class="comment-meta"> • {{ comment.createdAt|date('d.m.Y à H\\hi') }}</i>
                                <div class="content">{{ comment.content }}</div>
                            </div>
                        {% endfor %}

                        <h2>Ajouter un commentaire</h2>
                        {{ form_start(newCommentForm) }}
                            {{ form_widget(newCommentForm) }}
                            <button class="btn btn-success">Ajouter</button>
                        {{ form_end(newCommentForm) }}

                    </div>

                </div>

            </div>
        </div>

        <div class="col-md-4">
            <div class="right-container">
                <h4>Derniers articles</h4>

                {% for lastPost in lastPosts %}
                    <div class="row last-post">
                        <div class="col-md-5">
                            <div class="img-container">
                                <a href="{{ path('post_show', {'id' : lastPost.id}) }}">
                                    <img src="{{ asset('uploads/posts_images/' ~ lastPost.image) }}" alt="image">
                                </a>
                            </div>
                        </div>
                        <div class="col-md-7 content">
                            <a href="{{ path('post_show', {'id' : lastPost.id}) }}">{{ lastPost.title|length > 97 ? lastPost.title|trim(0,94) ~ '...' : lastPost.title}}</a>
                            <div class="date">
                                {{ lastPost.createdAt|date('d.m.Y') }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}
