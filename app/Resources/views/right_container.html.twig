<h4>Recherche</h4>

<form id="searchForm" action="{{ path('post_search') }}" method="POST">
    <input type="text" name="term" required placeholder="Ex: Tennis"/>
    <button class="btn btn-primary">Rechercher</button>
</form>

<h4>Derniers articles</h4>

{% for lastPost in lastPosts %}
    <div class="row last-post">
        <div class="col-md-5">
            <div class="img-container">
                <a href="{{ path('post_show', {'id' : lastPost.id}) }}">
                    <img src="{{ asset('uploads/posts_images/' ~ lastPost.image) }}" alt="image">
                </a>
            </div>
        </div>
        <div class="col-md-7 content">
            <a href="{{ path('post_show', {'id' : lastPost.id}) }}">{{ lastPost.title|length > 97 ? lastPost.title|trim(0,94) ~ '...' : lastPost.title}}</a>
            <div class="date">
                {{ lastPost.createdAt|date('d.m.Y') }}
            </div>
        </div>
    </div>
{% endfor %}

<h4>Cat√©gories</h4>

<ul class="category-list">
    {% for category in categories %}
        <li><a href="{{ path('categories_show', {'id': category.id}) }}">{{ category.name }}</a></li>
    {% endfor %}
</ul>